.row
  .large-10.small-12.columns
    contacts-form(ng-show="contactsCtrl.showForm")
    h3 Your contacts
    table#contactsTable
      thead
        td Name
        td Company
        td Email
        td Actions
      tbody
        tr(ng-repeat="contact in contactsCtrl.all_contacts")
          td {{contact.name}}
          td {{contact.company}}
          td {{contact.email}}
          td 
            a#actionButtons.button.tiny(ng-click="contactsCtrl.showEditForm(contact)") Edit          
            a#actionButtons.button.tiny.alert(ng-click="contactsCtrl.removeContact(contact)") Delete
  .large-2.small-12.columns
    a.button.large(ng-if="!contactsCtrl.showForm" ng-click="contactsCtrl.showAddForm()") Add Contact
    a.button.large.alert(ng-if="contactsCtrl.showForm" ng-click="contactsCtrl.showAddForm()") Close
.row
  .large-12.columns
    a.button.large.warning( ng-click="contactsCtrl.getContacts()") Refresh
